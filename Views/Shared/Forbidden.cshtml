@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="error-page">
        <i class="bi bi-shield-lock-fill text-danger" style="font-size: 5rem;"></i>
        <h1 class="display-1 fw-bold text-danger mt-3">403</h1>
        <h2 class="mb-4">Access Denied</h2>
        <p class="lead">You don't have permission to access this page.</p>
        <p class="text-muted">If you believe this is an error, please contact support.</p>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door"></i> Return Home
            </a>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 50px 20px;
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>