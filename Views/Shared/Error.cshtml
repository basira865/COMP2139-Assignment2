@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <div style="font-size: 8rem;">⚠️</div>
    <h1 class="display-1 fw-bold text-danger">500</h1>
    <h2 class="mb-4">Internal Server Error</h2>
    <p class="lead">Oops! Something went wrong on our end.</p>

    @if (Model?.ShowRequestId ?? false)
    {
        <p class="text-muted">
            <small>Request ID: <code>@Model.RequestId</code></small>
        </p>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-house-door"></i> Return Home
        </a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Go Back
        </a>
    </div>
</div>