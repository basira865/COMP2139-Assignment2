@model List<COMP2139_Assignment1_1.Models.CartItem>
@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventTitle</td>
                <td>@item.EventDateTime.ToString("d")</td>
                <td>@item.Quantity</td>
                <td>$@item.Subtotal</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="eventId" value="@item.EventId" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <h5>Total: $@ViewBag.TotalCost</h5>
        <form asp-action="Clear" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-secondary">Clear Cart</button>
        </form>
        <a asp-controller="Purchases" asp-action="Create" class="btn btn-primary ms-2">Checkout</a>
    </div>
}